@model IEnumerable<TechSupport.Models.Product>

@{
    ViewBag.Title = "Assign Technician";
}

<div class="input-group">
    <input type="search" name="id" id="prodSearch" class="form-control shadow-none" placeholder="Search" />
    <div class="input-group-append">
        <button class="btn btn-outline-primary" onclick="prodSearch()">Search</button>
    </div>
</div>
<hr />

<div class="table table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <button onclick="getProdName('@item.ProductCode')" class="btn btn-outline-primary">Choose</button>
                </td>
            </tr>
        }

    </table>
</div>
